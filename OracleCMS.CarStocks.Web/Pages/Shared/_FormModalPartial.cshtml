<!-- Modal -->
<div id="modal-placeholder">
	<div class="modal fade" id="form-modal" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-hidden="true">
		<div class="modal-dialog modal-lg" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title"></h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">@Localizer["Cancel"]</button>
					<button type="button" class="btn btn-success" data-save="modal">@Localizer["Save changes"]</button>
				</div>
			</div>
		</div>
	</div>
</div>
