@using Models
@model CarsViewModel

<div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-1 row-cols-xl-1 row-cols-xxl-1">
    <div class="col">
	<div class="mb-3">
		<label asp-for="@Model.Make" class="form-label"><strong>@Localizer["Make"] :</strong></label>
			<input asp-for="@Model.Make" class="form-control" maxlength="50" />
			<span asp-validation-for="@Model.Make" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.Model" class="form-label"><strong>@Localizer["Model"] :</strong></label>
			<input asp-for="@Model.Model" class="form-control" maxlength="50" />
			<span asp-validation-for="@Model.Model" class="text-danger"></span>
			
	</div>
</div>
<div class="col">
	<div class="mb-3">
		<label asp-for="@Model.Year" class="form-label"><strong>@Localizer["Year"] :</strong></label>
			<input asp-for="@Model.Year" class="form-control text-end"  />
			<span asp-validation-for="@Model.Year" class="text-danger"></span>
			
	</div>
</div>

</div>
