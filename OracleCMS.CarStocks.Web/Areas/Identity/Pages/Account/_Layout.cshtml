@{
    var appName = Configuration.GetValue<string>("Application");
	var backgroundClass = Configuration.GetValue<string>("BackgroundClass");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - @appName</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />  
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i&amp;display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,500;0,600;0,700;1,400&display=swap" />
    <link rel="stylesheet" href="~/lib/fontawesome-free/css/all.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/fills-styles.css" />
    @RenderSection("Styles", required: false)
    <script asp-add-nonce>
        @Html.Raw(JavaScriptSnippet.ScriptBody)
    </script>
</head>
<body class="@backgroundClass">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-9 col-lg-12 col-xl-10">
                @RenderBody()
            </div>
        </div>
    </div>
    <script asp-add-nonce src="~/lib/jquery/dist/jquery.min.js"></script>
    <script asp-add-nonce src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
