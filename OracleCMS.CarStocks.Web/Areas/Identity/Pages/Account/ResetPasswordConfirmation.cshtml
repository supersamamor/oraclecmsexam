@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Reset password confirmation";
    Layout = "_Layout";
}


<div class="card shadow-lg o-hidden border-0 my-5">
    <div class="card-body p-0">
        <div class="row">
            <div class="col-lg-12">
                <div class="p-5">
                    <p class="login-box-msg">Your password has been reset. Please <a asp-page="./Login">click here to log in</a>.</p>
                </div>
            </div>
        </div>
    </div>
</div>