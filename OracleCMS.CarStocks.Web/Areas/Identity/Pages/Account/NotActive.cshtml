@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Account Not Active";
    Layout = "_Layout";
}

<div class="card shadow-lg o-hidden border-0 my-5">
    <div class="card-body p-0">
        <div class="row">        
            <div class="col-lg-12">
                <div class="p-5">
                    <p class="login-box-msg">Your account is not activated. Please contact your administrator to activate your account.</p>
                    <p class="mt-3 mb-1">
                        <a href="./Login">Return to login page</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
