@using Models
@model ApplicationViewModel

<div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-1 row-cols-xl-1 row-cols-xxl-1">
    @if (!string.IsNullOrWhiteSpace(Model.DisplayName))
    {
        <div class="col">
            <div class="mb-3">
                <label asp-for="@Model.ClientId" class="form-label fieldrequired"><strong>Client Id :</strong></label>
                <input asp-for="@Model.ClientId" class="form-control" readonly />
            </div>
        </div>
    }
    <div class="col">
        <div class="mb-3">
            <label asp-for="@Model.DisplayName" class="form-label fieldrequired"><strong>Name :</strong></label>
            <input asp-for="@Model.DisplayName" class="form-control" maxlength="255" />
            <span asp-validation-for="@Model.DisplayName" class="text-danger"></span>
        </div>
    </div>
    <div class="col">
        <div class="mb-3">
            <label asp-for="@Model.RedirectUri" class="form-label fieldrequired"><strong>Redirect URI :</strong></label>
            <input asp-for="@Model.RedirectUri" class="form-control" maxlength="255" />
            <span asp-validation-for="@Model.RedirectUri" class="text-danger"></span>
        </div>
    </div>
    <div class="col">
        <div class="mb-3">
            <label asp-for="@Model.Scopes" class="form-label fieldrequired"><strong>Scopes :</strong></label>
            <input asp-for="@Model.Scopes" class="form-control" maxlength="255" />
            <span asp-validation-for="@Model.Scopes" class="text-danger"></span>
        </div>
    </div>
    <div class="col">
        <div class="mb-3">
            <label asp-for="@Model.EntityId" class="form-label fieldrequired"><strong>Entity :</strong></label>         
            <select id="entity-select" asp-for="@Model.EntityId"
                    class="select2 form-control"
                    asp-items="@Model.Entities">
                <option></option>
            </select>
            <span asp-validation-for="@Model.EntityId" class="text-danger"></span>
        </div>
    </div>
</div>

